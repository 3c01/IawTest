<?xml version="1.0" ?>
<Story>

  <!-- ================================================================= -->
  <!-- ====================== BEGIN FILTER EVENTS ====================== -->
  <!-- ================================================================= -->

  <Event Name="Filter_Non_Capital">
    <Event_Type>STORY_CLICK_GUI</Event_Type>
    <Event_Param1>b_space_filter01</Event_Param1>
    <Reward_Type>TRIGGER_AI</Reward_Type>
    <Reward_Param1>SELECT_NON_CAPITAL</Reward_Param1>
    <Reward_Param2></Reward_Param2>
    <Perpetual>true</Perpetual>
  </Event>

  <Event Name="Filter_Capitals">
    <Event_Type>STORY_CLICK_GUI</Event_Type>
    <Event_Param1>b_space_filter02</Event_Param1>
    <Reward_Type>TRIGGER_AI</Reward_Type>
    <Reward_Param1>SELECT_CAPITAL</Reward_Param1>
    <Reward_Param2></Reward_Param2>
    <Perpetual>true</Perpetual>
  </Event>

  <Event Name="Filter_Structures">
    <Event_Type>STORY_CLICK_GUI</Event_Type>
    <Event_Param1>b_space_filter03</Event_Param1>
    <Reward_Type>TRIGGER_AI</Reward_Type>
    <Reward_Param1>SELECT_STRUCTURE</Reward_Param1>
    <Reward_Param2></Reward_Param2>
    <Perpetual>true</Perpetual>
  </Event>

  <!-- ================================================================= -->
  <!-- ======================= END FILTER EVENTS ======================= -->
  <!-- ================================================================= -->


 <Event Name="Zoom_Zoom">
		<Event_Type>STORY_ELAPSED</Event_Type>
		<Event_Param1>0</Event_Param1>
		<Story_Dialog></Story_Dialog>
		<Story_Chapter>0</Story_Chapter>
		<Story_Dialog_Popup>False</Story_Dialog_Popup>
		<Story_Tag>Intro_Tag</Story_Tag>
 </Event>

 <Event Name="Click_Non_Capital_Filter">
   <Event_Type>STORY_TRIGGER</Event_Type>
   <Reward_Type>FORCE_CLICK_GUI</Reward_Type>
   <Reward_Param1>b_space_filter01</Reward_Param1>
   <Prereq>Zoom_Zoom</Prereq>
 </Event>


 <Event Name="Show_Screen_Text">
		<Event_Type>STORY_AI_NOTIFICATION</Event_Type>
			<Event_Param2>SHOW_SCREEN_TEXT</Event_Param2>
		<Reward_Type>SCREEN_TEXT</Reward_Type>
			<Reward_Param1></Reward_Param1>
			<Reward_Param2>-1</Reward_Param2>
		<Perpetual>true</Perpetual>
		<Branch>Screen_Text_Events</Branch>
	</Event>

  <Event Name="Remove_Screen_Text">
    <Event_Type>STORY_AI_NOTIFICATION</Event_Type>
			<Event_Param2>REMOVE_SCREEN_TEXT</Event_Param2>
    <Reward_Type>SCREEN_TEXT</Reward_Type>
			<Reward_Param1></Reward_Param1>
      <Reward_Param4>remove</Reward_Param4>
		<Perpetual>true</Perpetual>
		<Branch>Screen_Text_Events</Branch>
  </Event>

	<!--
	<Event Name="RESET_BRANCH_Screen_Text_Events">
		<Event_Type>STORY_AI_NOTIFICATION</Event_Type>
			<Event_Param2>RESET_TEXT_BRANCH</Event_Param2>
		<Reward_Type>RESET_BRANCH</Reward_Type>
			<Reward_Param1>Screen_Text_Events</Reward_Param1>
		<Branch>Screen_Text_Events</Branch>
	</Event>-->



	<Event Name="Zoom_out">
		<Event_Type>STORY_ZOOM_OUT_PLANET</Event_Type>
			<Event_Param1></Event_Param1>
		<Reward_Type>TRIGGER_AI</Reward_Type>
			<Reward_Param1>ZOOMED_OUT</Reward_Param1>
			<Reward_Param2>Empire</Reward_Param2>
		<Perpetual>true</Perpetual>
		<Branch>Zoom</Branch>
	</Event>


	<Event Name="Set_Structures">
		<Event_Type>STORY_AI_NOTIFICATION</Event_Type>
			<Event_Param2>SET_STRUCTURES</Event_Param2>
		<Story_Dialog></Story_Dialog>
		<Story_Chapter>1</Story_Chapter>
		<Story_Dialog_Popup>False</Story_Dialog_Popup>
		<Story_Tag>Zoom</Story_Tag>
		<Perpetual>true</Perpetual>
	</Event>

	<!-- SPECIAL PLANETS -->

</Story>
